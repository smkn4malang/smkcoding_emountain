<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alvinayp.emountain.HomeActivity">

    <ImageView
        android:background="#75b3ff"
        android:layout_width="match_parent"
        android:layout_height="210dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:background="@color/colorPrimary"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:text="EMOUNTAIN"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"
                android:text="emountain"/>
        </LinearLayout>

        <LinearLayout
            android:background="#0cffffff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:onClick="Info1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gsemeru"/>
                <ImageButton
                    android:src="@drawable/gbromo"
                    android:layout_marginTop="5dp"
                    android:layout_width="160dp"
                    android:onClick="Info3"
                    android:scaleType="centerCrop"
                    android:layout_height="100dp"/>
                <ImageButton
                    android:src="@drawable/gargopuro"
                    android:layout_width="160dp"
                    android:layout_marginTop="5dp"
                    android:onClick="Info5"
                    android:layout_height="100dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:src="@drawable/garjuno"
                    android:layout_width="160dp"
                    android:onClick="Info2"
                    android:layout_height="100dp"/>
                <ImageButton
                    android:src="@drawable/graung"
                    android:layout_width="160dp"
                    android:onClick="Info4"
                    android:layout_marginTop="5dp"
                    android:layout_height="100dp"/>
                <ImageButton
                    android:background="#589b9b9b"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="160dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="100dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
