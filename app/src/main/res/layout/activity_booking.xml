<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alvinayp.emountain.BookingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#75b3ff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:text="Tanggal Berangkat"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/txt_tgl"
            android:hint="Tgl | Bulan | Tahun"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:text="Tanggal Pulang"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/txt_tgll"
            android:hint="Tgl | Bulan | Tahun"/>

    </LinearLayout>

</RelativeLayout>
